<h1>Chỉnh sửa tài khoản người dùng</h1>

<form class="row g-3" method="post">
  <div class="col-12">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      value="{{user.email}}"
      disabled
    />
  </div>
  <div class="col-12">
    <label for="password" class="form-label">Password</label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      value="{{user.password}}"
      required
    />
  </div>

  <div class="col-12">
    <label for="name" class="form-label">Tên</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{user.name}}"
      required
    />
  </div>
  <div class="col-12">
    <label for="address" class="form-label">Địa chỉ</label>
    <input
      type="text"
      class="form-control"
      id="address"
      name="address"
      value="{{user.address}}"
      required
    />
  </div>
  <div class="col-12 d-flex justify-content-center">
    <button class="btn btn-primary" type="submit">Cập nhật</button>
  </div>
</form>